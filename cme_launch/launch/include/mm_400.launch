<?xml version="1.0" encoding="UTF-8"?>
<launch>
	<arg name="gazebo" default="true"/>
	<arg name="scanunifier" default="false"/>
	<arg name="software_joystick" default="true"/>
	<arg name="manipulator" default="panda"/>

	<!-- Load the robot description and manipulator if specified -->
	<include file="$(find cme_launch)/launch/include/mm_400_spawn.launch.xml)">
		<param name="manipulator" value="$(arg manipulator)"/>
		<param name="gazebo" value="$(arg gazebo)"/>
		<param name="scanunifier" value="$(arg scanunifier)"/>
	</include>

	<include file="$(find cme_launch)/launch/include/mm_400_move_base.launch.xml)"/>
 
	<include if="$(arg scanunifier)" file="$(find neo_simulation)/config/mm_400/scan_unifier/mm_400_scan_unifier.launch"/>

	<node if="$(arg software_joystick)" pkg="teleop_twist_keyboard" type="teleop_twist_keyboard.py"
	      name="teleop_keyboard" output="screen" />

</launch>
